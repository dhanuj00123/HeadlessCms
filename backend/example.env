# Server Configuration
PORT=3000                        # Port number for the server
NODE_ENV=development            # Environment (development/production)

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database    # MongoDB connection string

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here                # From Google Cloud Console
GOOGLE_CLIENT_SECRET=your_google_client_secret_here        # From Google Cloud Console
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback   # OAuth callback URL

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here    # Secret key for JWT token generation (min 32 chars)

# Session Configuration
SESSION_SECRET=your_session_secret_here # Secret key for session management (min 32 chars)

# Optional Configuration
# CORS_ORIGIN=http://localhost:3000     # CORS allowed origin
# API_VERSION=v1                        # API version
# LOG_LEVEL=debug                       # Logging level 